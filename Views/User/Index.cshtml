@model List<LP3_Avaliacao_3bi.ViewModels.ShoppingViewModel>

@{
    ViewData["Title"] = "Lojas e Quiosques";
}

<div class="text-center">
    <h1>Lojas e Quiosques</h1><br>

    @if(Model.Count == 0) 
    {
        <p>Nenhum(a) loja/quiosque cadastrado(a)</p>
    }
    else
    {
        <table class="table table-bordered table-responsive table-hover" border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Piso</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Loja/Quiosque</th>
                    <th>Email</th>
                </tr>
            </thead>

            @foreach(var store in Model)
            {
                <tbody>
                    <tr>
                        <td>@store.Id</td>
                        <td>@store.Floor</td>
                        <td>@store.Name</td>
                        <td>@store.Description</td>
                        <td>@store.Store</td>
                        <td>@store.Email</td>
                    </tr>
                </tbody>
            }
        </table>
    }
</div>